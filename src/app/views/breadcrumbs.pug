mixin breadcrumbs(title, anotherTitle, url)
  nav.flex.justify-end.mr-5(aria-label='Breadcrumb')
    ol.inline-flex.items-center.space-x-1(class='md:space-x-3')
      li.inline-flex.items-center
        a.inline-flex.items-center.text-sm.font-medium.text-black(href='/' class='hover:text-blue-600 dark:text-black dark:hover:text-red')
          svg.w-4.h-4.mr-2(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
            path(d='M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z')
          |         Home
      if anotherTitle
        li(aria-current='page')
          .flex.items-center
            svg.w-6.h-6.text-black(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
              path(fill-rule='evenodd' d='M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z' clip-rule='evenodd')
            a.ml-1.text-sm.font-medium.text-gray-400(class='md:ml-2 dark:text-black hover:text-blue-600' href=url)=title
      else
        li(aria-current='page')
                  .flex.items-center
                    svg.w-6.h-6.text-black(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                      path(fill-rule='evenodd' d='M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z' clip-rule='evenodd')
                    span.ml-1.text-sm.font-medium.text-gray-400(class='md:ml-2 dark:text-gray-400')=title          
      if anotherTitle
        li(aria-current='page')
          .flex.items-center
            svg.w-6.h-6.text-black(aria-hidden='true' fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
              path(fill-rule='evenodd' d='M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z' clip-rule='evenodd')
            span.ml-1.text-sm.font-medium.text-gray-400(class='md:ml-2 dark:text-gray-400')=anotherTitle